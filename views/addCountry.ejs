<html>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
<style>
    textarea {
        width: 400px;
        height: 150px;
    }

    a{
        text-decoration: none;
        color: seashell;
    }
    label{
        color: saddlebrown;
    }
    h1{
        color: slateblue;
    }
</style>

<body>
    <h1>Add Country</h1>
    <% if (errors !=undefined) { %>
        <ul>
            <% errors.forEach((error)=> { %>
                <li>
                    <%= error.msg %>
                </li>
                <% }) %>
        </ul>
    <% } %>


    <form action="/addCountry" method="POST">
        <label>Country Code: </label>
        <input type="text" name="co_code"><br><br>
        <label>Country Name: </label>
        <input type="text" name="co_name"><br><br>
        <label>Country Details: </label>
        <textarea name="co_details"></textarea><br><br>
        <input class="btn btn-secondary" type="submit" value="Add">
    </form>

    <br><br>
    <br><br>
    <br><br>
    <button class="btn btn-secondary"><a href="/country" class="button">&#60;&#60;COUNTRY</a> </button>
    <button class="btn btn-secondary"><a href="/">&#60;&#60;HOME</a> </button>
</body>

</html>