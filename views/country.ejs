<!DOCTYPE html>
<html lang="en">

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <style>
        table,
        th,
        td {
            border: 1px solid black;
        }

        a{
            text-decoration: none;
            color: seashell;
        }
        .special{
            color: royalblue;
        }
        h1{
            color: blueviolet;
        }
    </style>
</head>

<body>
    <h1>Countries Page</h1>
    
    <button class="btn btn-secondary"><a href="/addCountry">Add Country</a> </button>
    <br><br>

    <table>
        <tr>
            <th>Country Code</th>
            <th>Country Name</th>
            <th>Country Details</th>
            <th>Action</th>
            <th>Delete</th>
        </tr>
       <% for(var i = 0; i <country.length; i++) { %>
    
            <tr>
                <td>
                    <%= country[i].co_code %>
                </td>
                <td>
                    <%= country[i].co_name %>
                </td>
                <td>
                    <%= country[i].co_details %>
                </td>
                <td>
                    <a class="special"href="/updateCountry/<%= country[i].co_code%>">Update</a>
                </td>
                <td>
                     <a class="special"href="/deleteCountry/<%= country[i].co_code%>">Delete</a>
                </td>
               
            </tr>
            <% } %>
    </table>
        <br><br>
        <br><br>
        <br><br> 
        <button class="btn btn-secondary"><a href="/" >&#60;&#60;HOME</a> </button>
</body>

</html>